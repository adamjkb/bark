{
	"compilerOptions": {
		"paths": {
			"$types/*": [
				"./types/*"
			]
		},
		"moduleResolution": "node",
		"module": "esnext",
		"target": "esnext",
		"allowJs": true,
		"checkJs": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"sourceMap": true,
		"strict": true
	}
}
