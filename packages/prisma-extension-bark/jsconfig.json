{
  "include": ["**/*.ts", "**/*.js"],
  "exclude": ["node_modules"],
  "compilerOptions": {
	"baseUrl": "./",
	"paths": {
		"$types/*": [
			"types/*"
		]
	},
	"noEmit": true,
    "lib": ["ESNext"],
    "isolatedModules": true,
    "esModuleInterop": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "target": "ESNext",
    "strict": true,
    "allowJs": true,
    "checkJs": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "noImplicitAny": true
  }
}
