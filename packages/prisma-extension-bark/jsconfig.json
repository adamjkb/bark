{
  "include": ["**/*.ts", "**/*.js"],
  "exclude": ["node_modules"],
  "compilerOptions": {
	"noEmit": true,
    "lib": ["ES2019"],
    "isolatedModules": true,
    "esModuleInterop": true,
    "module": "CommonJS",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "target": "ES2019",
    "strict": true,
    "allowJs": true,
    "checkJs": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "noImplicitAny": true
  }
}
